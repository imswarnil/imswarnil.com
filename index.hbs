{{!< default}}

<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered is-desktop is-variable is-6">
        <!-- Left Content -->
        <div class="column is-7-desktop is-12-mobile px-5 py-6">
          <div class="mb-3">
            <span class="tag is-rounded is-primary is-light">
              <span class="icon is-small"><i class="ph-duotone ph-map-pin"></i></span>
              <span>{{@custom.location}}</span>
            </span>
          </div>

          <p class="is-size-6 mb-2">hi! ðŸ‘‹</p>
          <h1 class="title is-size-2-touch is-size-1-desktop has-text-weight-bold has-text-light mb-3">
            I'm <span class="has-text-light">{{@site.title}}</span>,
          </h1>
          <h2 class="subtitle is-size-5-touch is-size-4-desktop has-text-light mb-4">
            a <strong>front-end developer</strong> who loves intuitive,<br class="is-hidden-mobile">
            clean and modern UI design.
          </h2>

          <!-- Skills / Tags -->
          <div class="tags mb-5">
            <span class="tag is-info is-light">JavaScript</span>
            <span class="tag is-success is-light">UI/UX</span>
            <span class="tag is-link is-light">Bulma</span>
            <span class="tag is-warning is-light">Ghost CMS</span>
          </div>

          <!-- Action Buttons -->
          <div class="buttons are-small">
            <a href="#contact" class="button is-primary">Get in Touch</a>
            <a href="{{@site.url}}/resume.pdf" class="button is-light">
              <span class="icon"><i class="fas fa-file-alt"></i></span>
              <span>Resume</span>
            </a>
          </div>
        </div>

        <!-- Right Side: Profile Image -->
        <div class="column is-4-desktop is-12-mobile has-text-centered px-5 py-6">
          <figure class="image is-inline-block">
            <img 
              src="{{@site.cover_image}}" 
              alt="Profile Picture" 
              class="image "
              style="box-shadow: 0 10px 40px rgba(0,0,0,0.1); border: 4px solid white;">
          </figure>
        </div>

      </div>
    </div>
  </div>
</section>



<section class="posts">
  <div class="container">
    {{!-- Latest Posts --}}
    <div class="columns is-multiline">
      {{#foreach posts }}
        <div class="column is-12-mobile is-6-tablet is-4-widescreen is-6-desktop my-5">
          {{> post-card }}
        </div>
      {{/foreach}}
    </div>

    {{pagination}}
  </div>
</section>

