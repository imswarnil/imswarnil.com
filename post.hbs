{{!< default}}

{{#post}}
<main class="content is-large">
  <div class="container">
    <div class="columns is-variable is-6-desktop">
      {{!-- Main Content Column (Left) --}}
      <div class="column is-two-thirds-desktop is-three-fifths-widescreen"> {{!-- Adjust column width as needed --}}
        <article class="article post-article-main">
          {{!-- 1. Post Title --}}
          <header class="post-header">
            <h1 class="title is-size-1-desktop is-size-2-tablet is-size-3-mobile has-text-weight-bold post-title">
              {{title}}
            </h1>

            {{!-- Post Meta: Author, Date, Reading Time (Can be below title or elsewhere) --}}
            <div class="post-meta level is-mobile is-size-6 has-text-grey mt-4 mb-5">
              <div class="level-left">
                {{#primary_author}}
                  <div class="level-item author-meta">
                    {{#if profile_image}}
                      <figure class="image is-32x32 is-inline-block mr-2">
                        <img class="is-rounded" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                      </figure>
                    {{/if}}
                    <a href="{{url}}" class="has-text-link has-text-weight-medium">{{name}}</a>
                  </div>
                {{/primary_author}}
              </div>
              <div class="level-right">
                <div class="level-item">
                  <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                </div>
                {{#if reading_time}}
                  <div class="level-item">
                    <span class="is-hidden-mobile">• </span>{{reading_time}}
                  </div>
                {{/if}}
              </div>
            </div>

            {{!-- Tags - Placed after meta, before excerpt for context --}}
            {{#if tags}}
              <div class="tags post-header-tags are-medium mb-5">
                {{#foreach tags}}
                  <a class="tag is-light is-rounded tag-{{slug}} {{#if accent_color}}has-accent-bg{{/if}}"
                     {{#if accent_color}}style="background-color: {{accent_color}}; color: {{#match @custom.contrast_color "dark"}}var(--enji-dark-text){{else}}var(--enji-white){{/match}};"{{/if}}
                     href="{{url}}" title="{{name}}">{{name}}</a>
                {{/foreach}}
              </div>
            {{/if}}
          </header>

          {{!-- 2. Post Excerpt --}}
          {{#if custom_excerpt}}
            <div class="content post-excerpt is-size-5 has-text-weight-normal mb-5">
              <p>{{custom_excerpt}}</p>
            </div>
          {{else if excerpt}}
            <div class="content post-excerpt is-size-5 has-text-weight-normal mb-5">
              <p>{{excerpt words="55"}}</p> {{!-- Slightly longer excerpt if shown prominently --}}
            </div>
          {{/if}}

          {{!-- 3. Feature Image --}}
          {{#if feature_image}}
            <figure class="image is-16by9 post-feature-image mb-6">
              <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy" class="has-radius">
            </figure>
          {{/if}}

          {{!-- Table of Contents (Optional - can be generated by JS or a Ghost helper) --}}
          {{!-- If you have a TOC partial or logic, place it here or in the sidebar --}}
          {{!-- Example: {{> "table-of-contents"}} --}}


          {{!-- 4. Post Content --}}
          <div class="content post-content-body is-medium"> {{!-- Bulma .content for typography --}}
            {{#if access}}
              {{content}}
            {{else}}
              {{html}}
              <div class="post-access-cta notification is-warning mt-5">
                  <h3 class="title is-4">This content is for subscribers only</h3>
                  <p class="subtitle is-6">Unlock this post and more by subscribing.</p>
                  <a href="/#/portal/signup" class="button is-primary is-large">Subscribe Now</a>
                  <p class="has-text-centered is-size-7 mt-3">
                      Already a member? <a href="/#/portal/signin">Sign in</a>
                  </p>
              </div>
            {{/if}}
          </div>

          {{!-- Author Bio Section (after content) --}}
          {{#primary_author}}
          <section class="section author-box-main content mt-6 p-5 has-background-white-ter">
              <div class="media">
                  <div class="media-left">
                      {{#if profile_image}}
                          <figure class="image is-96x96">
                              <img class="is-rounded" src="{{img_url profile_image size="s"}}" alt="{{name}}">
                          </figure>
                      {{/if}}
                  </div>
                  <div class="media-content">
                      <p class="title is-4 author-name">{{name}}</p>
                      {{#if bio}}
                          <p class="subtitle is-6 author-bio">{{bio}}</p>
                      {{/if}}
                      <div class="author-meta-links is-size-7">
                        {{#if location}}
                            <span><i class="fas fa-map-marker-alt icon is-small"></i> {{location}}</span>
                        {{/if}}
                        {{#if website}}
                            <span class="ml-3"><a href="{{website}}" target="_blank" rel="noopener noreferrer"><i class="fas fa-link icon is-small"></i> Website</a></span>
                        {{/if}}
                        {{!-- Add more social links here --}}
                      </div>
                  </div>
              </div>
          </section>
          {{/primary_author}}

          {{!-- Social Share (after content/author) --}}
          {{> "social-share"}} {{!-- Assuming this partial exists --}}

        </article>
      </div>


      {{!-- Sidebar Column (Right) --}}
      <div class="column is-one-third-desktop is-two-fifths-widescreen">
        <aside class="sidebar is-sticky">

          {{!-- Widget 1: Table of Contents (Example) --}}
          {{!-- You'll need JS to generate this or use a Ghost helper if available --}}
          {{!-- For now, a placeholder. Your existing TOC script can target this. --}}
          <div class="box sidebar-widget toc-widget mb-5">
            <h3 class="title is-5 widget-title">Table of Contents</h3>
            <div class="menu toc-menu-container">
              {{!-- Your existing TOC script's .menu-list would go here --}}
              <ul class="menu-list" id="toc-sidebar-list">
                {{!-- Dynamically populated by JS --}}
                <li><a href="#placeholder-for-js-toc">Section 1 (JS Populated)</a></li>
              </ul>
            </div>
          </div>


           <div class="box sidebar-widget toc-widget mb-5">
            <h3 class="title is-5 widget-title">Table of Contents</h3>
            <div class="menu toc-menu-container">
              {{!-- Your existing TOC script's .menu-list would go here --}}
                       <!-- Square ( Responsive ) -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-1291242080282540"
     data-ad-slot="7663977887"
     data-ad-format="auto"
     data-full-width-responsive="true"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
            </div>
          </div>




          {{!-- Widget 2: Author Card (if different from main author box or for all posts) --}}
          {{!-- This could be a generic site author or a featured author partial --}}
          {{#if @site.primary_author}}
            <div class="box sidebar-widget author-widget-sidebar mb-5">
              <h3 class="title is-5 widget-title">About {{ @site.primary_author.name }}</h3>
              <div class="media">
                {{#if @site.primary_author.profile_image}}
                <div class="media-left">
                  <figure class="image is-64x64">
                    <img src="{{img_url @site.primary_author.profile_image size="s"}}" alt="{{@site.primary_author.name}}" class="is-rounded">
                  </figure>
                </div>
                {{/if}}
                <div class="media-content">
                  {{#if @site.primary_author.bio}}
                    <p class="is-size-6">{{@site.primary_author.bio}}</p>
                  {{else}}
                    <p class="is-size-6">Read more posts by {{ @site.primary_author.name }}.</p>
                  {{/if}}
                  <a href="{{@site.primary_author.url}}" class="button is-small is-link is-outlined mt-3">View Profile</a>
                </div>
              </div>
            </div>
          {{/if}}

          {{!-- Widget 3: Popular Posts (Placeholder - needs dynamic fetching) --}}
          {{#get "posts" filter="featured:true" limit="5" as |popular|}}
            {{#if popular}}
            <div class="box sidebar-widget popular-posts-widget mb-5">
              <h3 class="title is-5 widget-title">Popular Articles</h3>
              <div class="content">
                {{#foreach popular}}
                  <article class="media is-align-items-center mb-3">
                    {{#if feature_image}}
                    <figure class="media-left image is-64x64">
                      <img src="{{img_url feature_image size="xs"}}" alt="{{title}}" style="object-fit: cover; width: 64px; height: 64px; border-radius: 4px;">
                    </figure>
                    {{/if}}
                    <div class="media-content">
                      <h4 class="title is-6 mb-1"><a href="{{url}}">{{title}}</a></h4>
                      <p class="subtitle is-size-7 has-text-grey">{{date format="MMMM DD, YYYY"}}</p>
                    </div>
                  </article>
                  {{#unless @last}}<hr class="is-marginless my-2">{{/unless}}
                {{/foreach}}
              </div>
            </div>
            {{/if}}
          {{/get}}

          {{!-- Widget 4: Newsletter Signup (Placeholder) --}}
          {{#if @site.members_enabled}}
            <div class="box sidebar-widget newsletter-widget mb-5">
              <h3 class="title is-5 widget-title">Stay Updated</h3>
              <p class="mb-3 is-size-6">Get the latest posts delivered right to your inbox.</p>
              {{!-- Use Ghost Portal for subscription or a custom form --}}
              <a href="/#/portal/signup" class="button is-primary is-fullwidth">Subscribe</a>
            </div>
          {{/if}}

          {{!-- Widget 5: Advertisement (Placeholder) --}}
          <div class="box sidebar-widget ad-widget">
            <h3 class="title is-5 widget-title has-text-centered is-size-7 has-text-grey-light">Advertisement</h3>
            <div class="ad-placeholder-sidebar" style="min-height: 250px; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
              <span class="has-text-grey">Ad Placeholder (e.g., 300x250)</span>
            </div>
          </div>

        </aside>
      </div>

    </div>
  </div>
</main>

{{!-- Related Posts Section (Full Width Below Main Content and Sidebar) --}}
{{#if @custom.show_related_posts}}
  <section class="section related-posts-section-fullwidth">
    <div class="container">
      <h2 class="title is-3 has-text-centered mb-6">You Might Also Like</h2>
      {{> "related-posts"}} {{!-- Ensure this partial is designed for this context --}}
    </div>
  </section>
{{/if}}

{{!-- Comments Section (Full Width Below Everything) --}}
{{#if comments}}
<section class="section comments-section-fullwidth">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-three-quarters-desktop is-four-fifths-tablet">
                <h2 class="title is-3 has-text-centered mb-5">Discussion</h2>
                {{comments}}
            </div>
        </div>
    </div>
</section>
{{/if}}

{{/post}}