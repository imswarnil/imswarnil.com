{{!< default}}

{{#post}}
{{!-- No <style> block is used. All styling is from pure Bulma classes. --}}

<body class="has-background-light">

<main class="section">
  <div class="container">
    {{!-- MONETIZATION: 1. Top Leaderboard Ad --}}
    <div class="box has-background-grey-lighter has-text-centered mb-5 is-hidden-mobile">
        <p class="has-text-grey-light">AdSense Leaderboard (728x90)</p>
    </div>

    <div class="columns is-variable is-8-desktop">

      {{!-- ======== Main Content Column (Wider) ======== --}}
      <div class="column is-9">
        
        {{!-- The YouTube Video Player --}}
        <figure class="image is-16by9 mb-4">
            <iframe id="youtube-player" class="has-ratio" src="https://www.youtube.com/embed/{{custom_excerpt}}?rel=0&enablejsapi=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </figure>

        {{!-- Title, Meta, and Share Block --}}
        <div class="box p-5">
            {{#if tags}}
                <div class="tags mb-3">
                    {{#foreach tags limit="3"}}<a class="tag is-info" href="{{url}}">{{name}}</a>{{/foreach}}
                </div>
            {{/if}}
            <h1 class="title is-size-3-desktop is-size-4-mobile has-text-weight-bold post-title mb-3">{{title}}</h1>
            <div class="level is-mobile">
                <div class="level-left">
                    <p class="is-size-7 has-text-grey"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time></p>
                </div>
                <div class="level-right">
                    <div class="share-buttons buttons has-addons">
                        <a class="button is-small" data-social="twitter"><span class="icon"><i class="fab fa-twitter"></i></span><span>Share</span></a>
                        <a class="button is-small" data-social="facebook"><span class="icon"><i class="fab fa-facebook-f"></i></span></a>
                        <a class="button is-small" data-social="whatsapp"><span class="icon"><i class="fab fa-whatsapp"></i></span></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            {{!-- YouTube Channel Subscribe Widget --}}
            <div class="level is-mobile">
                <div class="level-left">
                    <div class="media is-align-items-center">
                        <figure class="media-left">
                            <p class="image is-48x48">
                                <img class="is-rounded" src="{{primary_author.profile_image}}" alt="{{primary_author.name}}">
                            </p>
                        </figure>
                        <div class="media-content">
                            <p class="title is-6">{{primary_author.name}}</p>
                            <p class="subtitle is-7 has-text-grey">{{excerpt}} subscribers</p>
                        </div>
                    </div>
                </div>
                <div class="level-right">
                    <a href="#" class="button is-danger is-rounded has-text-weight-bold">
                        <span class="icon"><i class="fab fa-youtube"></i></span>
                        <span>Subscribe</span>
                    </a>
                </div>
            </div>
        </div>
        
        {{!-- MONETIZATION: 2. Below Player Ad --}}
        <div class="box has-background-grey-lighter has-text-centered my-5">
            <p class="has-text-grey-light p-5">AdSense Responsive Ad Unit</p>
        </div>

        {{!-- Main Description Box --}}
        <div class="box p-5">
            <p class="title is-5">Description</p>
            <div class="content is-medium gh-content">
                {{content}} {{!-- JS will hide the table inside this --}}
            </div>
        </div>

        {{!-- MONETIZATION: 3. In-Article Ad --}}
        <div class="box has-background-grey-lighter has-text-centered my-5">
            <p class="has-text-grey-light p-6">AdSense In-article Ad Unit</p>
        </div>
        
        {{!-- Ghost Portal Comments --}}
        <div class="mt-6">{{comments}}</div>
      </div>

      {{!-- ======== Sidebar Column ======== --}}
      <div class="column is-3">
        <aside class="post-sidebar-sticky">
        
          {{!-- MONETIZATION: 4. Sidebar Top Ad --}}
          <div class="box has-background-grey-lighter has-text-centered mb-5">
            <p class="has-text-grey-light p-6">AdSense Display Ad (300x250)</p>
          </div>
          
          {{!-- WIDGET 1: Timestamps --}}
          <div id="timestamps-widget" class="panel is-link mb-5" style="display: none;"> {{!-- JS controls visibility --}}
            <p class="panel-heading">Timestamps</p>
            <div id="timestamps-target" style="max-height: 400px; overflow-y: auto;"></div>
          </div>

          {{!-- WIDGET 2: Related Videos --}}
          {{#get "posts" filter="tags:hash-video+id:-{{id}}" limit="4" as |related|}}
            {{#if related}}
            <div class="box p-4 mb-5">
              <p class="title is-6 mb-4">Related Videos</p>
                {{#foreach related}}
                  <a href="{{url}}" class="is-block mb-4">
                    <figure class="image is-16by9 mb-2">
                        <img class="is-rounded" src="{{#if feature_image}}{{feature_image}}{{else}}https://i.ytimg.com/vi/{{custom_excerpt}}/hqdefault.jpg{{/if}}" alt="{{title}}" loading="lazy">
                    </figure>
                    <p class="is-size-7 has-text-weight-bold has-text-dark" style="line-height: 1.4;">{{title}}</p>
                  </a>
                {{/foreach}}
            </div>
            {{/if}}
          {{/get}}

          {{!-- MONETIZATION: 5. Native Ad Placeholder --}}
          <div class="box p-4 mb-5">
            <p class="title is-6 mb-4 has-text-grey-light">Sponsored</p>
            <a href="#" class="is-block">
                <figure class="image is-16by9 mb-2 has-background-grey-lighter is-rounded"></figure>
                <p class="is-size-7 has-text-weight-bold has-text-dark">This is a Native Ad That Looks Like a Related Post</p>
            </a>
          </div>

          {{!-- MONETIZATION: 6. Sidebar Bottom Ad --}}
          <div class="box has-background-grey-lighter has-text-centered">
            <p class="has-text-grey-light p-6" style="min-height: 500px;">AdSense Skyscraper Ad (300x600)</p>
          </div>
        </aside>
      </div>
    </div>
  </div>
</main>


{{!-- ================== JAVASCRIPT & SEO ================== --}}
<script src="https://www.youtube.com/iframe_api"></script>
<script>
    let player;
    let timestampDataForSeo = []; // Array to hold timestamp data for JSON-LD

    function onYouTubeIframeAPIReady() {
        if (document.getElementById('youtube-player')) {
            player = new YT.Player('youtube-player', { events: { 'onReady': onPlayerReady } });
        }
    }

    function onPlayerReady(event) {
        document.querySelectorAll('a.timestamp-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const time = parseFloat(link.dataset.time);
                if (player && typeof player.seekTo === 'function') {
                    player.seekTo(time, true);
                    player.playVideo();
                }
            });
        });
    }
    
    document.addEventListener('DOMContentLoaded', () => {
        // ---- 1. Sticky Sidebar (JS is required for this behavior) ----
        const sidebar = document.querySelector('.post-sidebar-sticky');
        if (sidebar && window.innerWidth >= 1024) {
            sidebar.style.position = 'sticky';
            sidebar.style.top = '2rem';
        }

        // ---- 2. Dynamic Timestamps and SEO Data Generation ----
        const generateTimestamps = () => {
            const sourceTable = document.querySelector('.gh-content table');
            const timestampWidget = document.getElementById('timestamps-widget');
            const timestampTarget = document.getElementById('timestamps-target');
            if (!sourceTable || !timestampWidget || !timestampTarget) return;

            const rows = sourceTable.querySelectorAll('tbody tr');
            if (rows.length === 0) return;
            
            const fragment = document.createDocumentFragment();
            rows.forEach(row => {
                const cells = row.querySelectorAll('td, th');
                if (cells.length < 2) return;
                
                const timeStr = cells[0].textContent.trim().split(' ')[0];
                const parts = timeStr.split(':').map(part => parseInt(part, 10));
                let seconds = 0;
                if (parts.length === 3) seconds = parts[0] * 3600 + parts[1] * 60 + parts[2];
                else if (parts.length === 2) seconds = parts[0] * 60 + parts[1];
                
                // Create link for the UI
                const link = document.createElement('a');
                link.className = 'panel-block is-flex is-justify-content-space-between timestamp-link';
                link.href = `#t=${seconds}`;
                link.dataset.time = seconds;
                link.innerHTML = `<span class="is-size-7">${cells[0].textContent.trim()}</span><span class="has-text-right is-size-7">${cells[1].textContent.trim()}</span>`;
                fragment.appendChild(link);

                // Store data for SEO
                timestampDataForSeo.push({
                    "@type": "Clip",
                    "name": cells[1].textContent.trim(),
                    "startOffset": seconds,
                    "url": window.location.href + `#t=${seconds}`
                });
            });
            
            timestampTarget.appendChild(fragment);
            timestampWidget.style.display = 'block'; // Show the widget
            sourceTable.style.display = 'none'; // Hide the original table
        };
        
        // ---- 3. Share Buttons ----
        const setupShareButtons = () => {
            document.querySelectorAll('.share-buttons a').forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    let url = encodeURIComponent(window.location.href), title = encodeURIComponent(document.title), shareUrl = '';
                    const social = button.dataset.social;
                    if(social === 'twitter') shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${title}`;
                    if(social === 'facebook') shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    if(social === 'whatsapp') shareUrl = `https://api.whatsapp.com/send?text=${title}%20${url}`;
                    if(shareUrl) window.open(shareUrl, 'share-window', 'height=450,width=550');
                });
            });
        };

        // ---- 4. Dynamic JSON-LD Injection ----
        const injectSeoData = () => {
            const schemaScript = document.getElementById('video-schema');
            if (!schemaScript) return;

            let schema = JSON.parse(schemaScript.textContent);
            if (timestampDataForSeo.length > 0) {
                schema.hasPart = timestampDataForSeo;
            }
            schemaScript.textContent = JSON.stringify(schema, null, 2);
        };
        
        generateTimestamps();
        setupShareButtons();
        injectSeoData(); // Run after timestamps are parsed
    });
</script>

{{!-- SEO: Dynamic JSON-LD VideoObject Schema --}}
<script id="video-schema" type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "VideoObject",
  "name": "{{title}}",
  "description": "{{excerpt words="50"}}",
  "uploadDate": "{{date format="YYYY-MM-DDTHH:mm:ss.SSSZ"}}",
  "embedUrl": "https://www.youtube.com/embed/{{custom_excerpt}}",
  "thumbnailUrl": [
    {{#if feature_image}}"{{feature_image}}"{{else}}"https://i.ytimg.com/vi/{{custom_excerpt}}/maxresdefault.jpg"{{/if}}
  ],
  "author": { "@type": "Person", "name": "{{primary_author.name}}" }
}
</script>
</body>
{{/post}}