{
  "name": "imswarnil-theme",
  "description": "Minimal & Clean Ghost Blog Theme by imswarnil, customized with Bulma.",
  "demo": "https://imswarnil.com",
  "version": "5.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "imswarnil",
    "email": "imswarnil@gmail.com",
    "url": "https://imswarnil.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Personal Blog",
      "Minimal",
      "Clean",
      "Bulma"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "imswarnil-theme",
    "bulma"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "browser-sync": "^2.26.13",
    "cssnano": "^5.0.7",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^1.0.0",
    "path": "^0.12.7",
    "pixrem": "^5.0.0",
    "postcss-color-rgba-fallback": "^4.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-comments": "^5.0.1",
    "postcss-opacity": "^5.0.0",
    "postcss-pseudoelements": "^2.1.1",
    "postcss-vmin": "^3.0.0",
    "postcss-will-change": "^4.0.1",
    "postcss-zindex": "^5.0.1",
    "sass": "^1.36.0"
  },
  "dependencies": {
    "bulma": "^0.9.3",
    "feather-icons": "^4.22.1",
    "fitvids": "^2.0.0",
    "lazysizes": "^5.3.2"
  },
  "config": {
    "custom": {
      "fixed_navbar": {
        "type": "boolean",
        "default": false,
        "description": "When enabled, the main navigation bar will stick to the top of the page as you scroll."
      },
      "location": {
        "type": "text",
        "default": "",
        "description": "Display your location, e.g., 'New York, USA', in the theme."
      }
    },
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}